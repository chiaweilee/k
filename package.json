    "test": "make test"
  },
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "joi": "^14.0.3",
    "koa": "^2.6.1",
    "koa-body": "^4.0.4",
    "koa-compose": "^4.1.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "query-string": "^6.2.0",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "eslint": "^5.8.0",
    "leakage": "^0.4.0",
    "lint-staged": "^8.0.4",
    "mocha": "^5.2.0",
    "should": "^13.2.3",
    "supertest": "^3.3.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
